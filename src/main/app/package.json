{
  "name": "kouta-ui",
  "version": "0.1.0",
  "private": true,
  "homepage": "/kouta",
  "scripts": {
    "build-css": "node-sass-chokidar src/styles/styles.scss -o ./src/assets/css/",
    "watch-css": "npm run build-css && node-sass-chokidar src/styles/styles.scss -o ./src/assets/css/ --watch",
    "start": "./scripts/start.sh $PORT $BACKEND_PORT",
    "start-for-start": "react-app-rewired start",
    "build-js": "react-app-rewired build",
    "build": "npm run build-css && npm run build-js",
    "test": "./scripts/test.sh $PORT $BACKEND_PORT",
    "start-and-test": "start-test start-for-test $PORT run-test",
    "start-for-test": "BROWSER=none NODE_ENV=test react-app-rewired start",
    "run-test": "react-app-rewired test --env=jsdom",
    "eject": "react-scripts eject"
  },
  "dependencies": {
    "axios": "^0.18.0",
    "classnames": "^2.2.6",
    "oph-urls-js": "github:Opetushallitus/oph-urls-js",
    "oph-virkailija-style-guide": "github:Opetushallitus/virkailija-styles",
    "superagent": "^3.8.3",
    "to-snake-case": "^1.0.0"
  },
  "devDependencies": {
    "ajv": "^6.5.3",
    "eslint-plugin-flowtype": "^2.50.3",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-react": "^7.11.1",
    "node-sass-chokidar": "^1.3.3",
    "npm-run-all": "^4.1.3",
    "puppeteer": "^1.8.0",
    "react": "^16.5.1",
    "react-app-rewire-mobx": "^1.0.9",
    "react-app-rewired": "^1.6.2",
    "react-dom": "^16.5.1",
    "react-router-dom": "^4.3.1",
    "react-scripts": "1.1.5",
    "start-server-and-test": "^1.7.1",
    "webpack": "^3.12.0"
  },
  "config": {
    "port": "3030",
    "backendport": "8099",
    "testport": "3130",
    "testbackendport": "8199"
  },
  "jest": {
    "testPathIgnorePatterns": [
      "<rootDir>/src/__tests__/mocks"
    ]
  }
}
